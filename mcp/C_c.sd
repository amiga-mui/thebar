#include <proto/locale.h>
#include <proto/utility.h>

#include "Debug.h"

struct FC_Type { const long ID; const char * const Str; };

const struct FC_Type _%i = { %d, %s };

static struct Catalog *TB_Catalog = NULL;

/*** Catalog functions ***/
/// tr()
const char *tr(APTR fcstr)
{
  const char *defaultstr = ((struct FC_Type *)fcstr)->Str;

  if(TB_Catalog)
    return (const char *)GetCatalogStr(TB_Catalog, ((struct FC_Type *)fcstr)->ID, (STRPTR)defaultstr);

  return defaultstr;
}
///
/// GetKeyChar()
// function that will strip out the special menusigns
char GetKeyChar(const char *string)
{
  char res = 0;

  if(LocaleBase && string)
  {
    for(; *string && *string != '_'; string++)
      ;

    if(*string++)
      res = ToLower(*string);
  }

  return res;
}
///
/// CloseCat()
void CloseCat(void)
{
  ENTER();

  if(TB_Catalog)
  {
    CloseCatalog(TB_Catalog);
    TB_Catalog = NULL;
  }

  LEAVE();
}
///
/// OpenCat(void)
BOOL OpenCat(void)
{
  static const struct TagItem tags[] = {
                                         { OC_BuiltInLanguage, (IPTR)%l },
                                         { OC_Version,         %v },
                                         { TAG_DONE,           0  }
                                       };

  ENTER();

  if(LocaleBase && TB_Catalog == NULL)
    TB_Catalog = (struct Catalog *)OpenCatalogA(NULL, (STRPTR)"%b.catalog", (struct TagItem *)&tags[0]);

  RETURN((BOOL)(TB_Catalog != NULL));
  return (BOOL)(TB_Catalog != NULL);
}
